#!/usr/bin/env bash

source "$BASE_DIR/lib/infra.inc.bash"
source "$BASE_DIR/lib/colors.inc.bash"

set -e

assert_terraform_version
assert_bbl_version

fetch_ubdms


bosh_ro_invoke interpolate > "$BASE_DIR/state/env-depl-manifest.yml"


echo -e "\n${BLUE}Running ${BOLD}bosh delete-env$RESET to destroy the BOSH environment\n"

bosh_rw_invoke delete-env
rm -vf "$BASE_DIR/state/env-creds.yml"


if [ ! -e "$BASE_DIR/state/jumpbox.key" ]; then
    echo -e "\n${BLUE}Skipping ${BOLD}SSH key removal$RESET, as it has not been used\n"
else
    echo -e "\n${BLUE}Removing ${BOLD}SSH key$RESET from SSH Agent\n"
    ssh-keygen -y -f "$BASE_DIR/state/jumpbox.key" > "$BASE_DIR/state/jumpbox.key.pub"
    if ssh-add -L | grep -qF "$(cat "$BASE_DIR/state/jumpbox.key.pub")"; then
        ssh-add -d "$BASE_DIR/state/jumpbox.key.pub"
    fi
    rm -vf "$BASE_DIR/state/jumpbox.key" "$BASE_DIR/state/jumpbox.key.pub"
fi


if [ ! -e "$BASE_DIR/state/bbl-state.json" ]; then
    echo -e "\n${BLUE}Skipping ${BOLD}bbl destroy$RESET, as the 'state/bbl-state.json' file is absent\n"
else
    echo -e "\n${BLUE}Running ${BOLD}bbl destroy$RESET to destroy infrastructure for the BOSH environment\n"
    bbl_invoke destroy --no-confirm --skip-if-missing
fi
