#!/usr/bin/env bash

source "$BASE_DIR/lib/gbe/infra.inc.bash"
source "$BASE_DIR/lib/gbe/colors.inc.bash"


echo -e "\n${BLUE}Aliasing the created BOSH environment to ${BOLD}'$BOSH_ENVIRONMENT'$RESET\n"

bosh -e "$(bosh int <(bbl_invoke bosh-deployment-vars) --path /internal_ip)" \
    --ca-cert <(bosh int "$BASE_DIR/state/base-env/depl-creds.yml" --path /director_ssl/ca) \
    alias-env "$BOSH_ENVIRONMENT"
