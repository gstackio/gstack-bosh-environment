#!/usr/bin/env bash

set -e

source "$BASE_DIR/lib/gbe/common.inc.bash"
assert deployment "$DEPL_DIR"

fetch_ubdms

source "$DEPL_DIR/conf/operations-layout.inc.bash"
build_operations_arguments

restrict_permissions "$DEPL_DIR/state/depl-creds.yml"
bosh_ro_invoke interpolate > "$DEPL_DIR/state/depl-manifest.yml"

bosh_rw_invoke deploy "$@"
